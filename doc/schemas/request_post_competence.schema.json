{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "category": {
      "type": "string",
      "description": "Id of category"
    },
    "roleDescriptions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": { "type": "string" },
          "role": { "type": "string" }
        },
        "required": ["description", "role"]
      },
      "minItems": 1
    },
    "behaviors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": { "type": "string" },
          "hint": { "type": "string" },
          "grade": { "type": "string" }
        },
        "required": ["description", "grade", "hint"]
      },
      "minItems": 0
    }
  },
  "required": ["name", "roleDescriptions", "category"]
}